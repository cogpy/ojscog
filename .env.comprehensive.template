# OJSCog Environment Configuration Template - Comprehensive Version
# Copy this file to .env and configure with your actual values

# ============================================================================
# GENERAL CONFIGURATION
# ============================================================================
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=your-secret-key-change-this-in-production
FLASK_ENV=development

# ============================================================================
# OJS CONFIGURATION
# ============================================================================
OJS_BASE_URL=http://localhost:8000
OJS_API_KEY=replace_me
OJS_DB_HOST=localhost
OJS_DB_PORT=3306
OJS_DB_NAME=ojs
OJS_DB_USER=ojs_user
OJS_DB_PASSWORD=ojs_password

# ============================================================================
# SKZ AGENTS CONFIGURATION
# ============================================================================
SKZ_ENABLED=true
SKZ_AGENT_BASE_URL=http://localhost:5000
SKZ_API_KEY=your-skz-api-key-change-this

# Agent Service Ports
AGENT_API_GATEWAY_PORT=5000
AGENT_RESEARCH_DISCOVERY_PORT=5001
AGENT_SUBMISSION_ASSISTANT_PORT=5002
AGENT_EDITORIAL_ORCHESTRATION_PORT=5003
AGENT_REVIEW_COORDINATION_PORT=5004
AGENT_CONTENT_QUALITY_PORT=5005
AGENT_PUBLISHING_PRODUCTION_PORT=5006
AGENT_ANALYTICS_MONITORING_PORT=5007

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
# PostgreSQL (for agents)
POSTGRES_DSN=postgresql://user:password@localhost:5432/ojs
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=skz_agents
POSTGRES_USER=skz_user
POSTGRES_PASSWORD=skz_password

# MySQL (for OJS)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DB=ojs
MYSQL_USER=ojs_user
MYSQL_PASSWORD=ojs_password

# ============================================================================
# REDIS CONFIGURATION
# ============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================================================
# MESSAGE QUEUE CONFIGURATION
# ============================================================================
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=guest
RABBITMQ_PASSWORD=guest
RABBITMQ_VHOST=/

# ============================================================================
# AI/ML CONFIGURATION
# ============================================================================
# OpenAI API (if using external LLM)
OPENAI_API_KEY=your-openai-api-key

# Hugging Face (for models)
HUGGINGFACE_API_KEY=your-huggingface-api-key

# Model Configuration
USE_LOCAL_MODELS=true
MODEL_CACHE_DIR=./models
ML_DECISION_MODEL_PATH=

# ============================================================================
# PROVIDER INTEGRATION
# ============================================================================
USE_PROVIDER_IMPLEMENTATIONS=false

# ============================================================================
# EXTERNAL SERVICES
# ============================================================================
# INCI Database
INCI_DATABASE_URL=https://api.example.com/inci
INCI_API_KEY=your-inci-api-key

# Patent Database
PATENT_API_URL=https://api.example.com/patents
PATENT_API_KEY=your-patent-api-key

# Regulatory Database
REGULATORY_API_URL=https://api.example.com/regulations
REGULATORY_API_KEY=your-regulatory-api-key

# ============================================================================
# EMAIL CONFIGURATION
# ============================================================================
# SendGrid
SENDGRID_API_KEY=

# Twilio
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# AWS SES
AWS_SES_REGION=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
SES_FROM_ADDRESS=

# Email Defaults
EMAIL_FROM=noreply@skinzonejournal.org
EMAIL_FROM_NAME=Skin Zone Journal

# ============================================================================
# SECURITY CONFIGURATION
# ============================================================================
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=86400

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_DEFAULT=100/hour

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=./logs/skz-agents.log

# Prometheus
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090

# Sentry (Error Tracking)
SENTRY_DSN=
SENTRY_ENVIRONMENT=development

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_AGENT_LEARNING=true
ENABLE_AUTOMATED_DECISIONS=false
ENABLE_REAL_TIME_MONITORING=true

# ============================================================================
# PERFORMANCE CONFIGURATION
# ============================================================================
WORKER_PROCESSES=4
WORKER_THREADS=2
MAX_CONNECTIONS=1000
REQUEST_TIMEOUT=30

# Caching
CACHE_TYPE=redis
CACHE_DEFAULT_TIMEOUT=300

# ============================================================================
# DASHBOARD CONFIGURATION
# ============================================================================
DASHBOARD_PORT=3000
SIMULATION_DASHBOARD_PORT=3001

# ============================================================================
# DEVELOPMENT CONFIGURATION
# ============================================================================
TESTING=false

# ============================================================================
# PRODUCTION CONFIGURATION (uncomment for production)
# ============================================================================
# ENVIRONMENT=production
# DEBUG=false
# FLASK_ENV=production
# USE_LOCAL_MODELS=false
# ENABLE_AUTOMATED_DECISIONS=true
